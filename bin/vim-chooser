#!/bin/bash

echo "
        ________ ++     ________
       /VVVVVVVV\\++++  /VVVVVVVV\\
       \\VVVVVVVV/++++++\\VVVVVVVV/
        |VVVVVV|++++++++/VVVVV/'           ********************************************************
        |VVVVVV|++++++/VVVVV/'             * Neo vim is here! Are you sure you wan't to open vim? *
       +|VVVVVV|++++/VVVVV/'+              ********************************************************
     +++|VVVVVV|++/VVVVV/'+++++                             *********     ********
   +++++|VVVVVV|/VVVVV/'+++++++++                           * (Y)es *     * (N)o *
     +++|VVVVVVVVVVV/'+++++++++                             *********     ********
       +|VVVVVVVVV/'+++++++++
        |VVVVVVV/'+++++++++
        |VVVVV/'+++++++++
        |VVV/'+++++++++
        'V/'   ++++++
                 ++
" 
read awnser

if [ "$awnser" == "Y" ]; then
  vim "$@"
else
  nvim "$@"
fi
