# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $RUN ~/.bfos/bin/bfnode ~/.bfos/system/run.js

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move the current workspace to the next output
# # (effectively toggles when you only have two outputs)
bindsym $mod+x move workspace to output right
bindsym $mod+Shift+x move workspace to output down

# split in horizontal orientation
bindsym $mod+Shift+h split h

# split in vertical orientation
bindsym $mod+Shift+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "Num" {
  bindsym Num_Lock mode "default"
}
bindsym Num_Lock mode "Num"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Move mode
mode "move" {
  bindsym l move left
  bindsym j move down
  bindsym k move up
  bindsym h move right

  bindsym Escape mode "default"
}

bindsym $mod+m mode "move"

# File explorer
bindsym $mod+e exec pcmanfm

# Startup script
exec_always ~/.bfos/bin/bfinit

# System font
font pango: DroidSansMonoForPowerline Nerd Font 16px bold

# Bar
bar {
  font pango: DroidSansMonoForPowerline Nerd Font 16px
  status_command ~/.bfos/bin/bfnode ~/.bfos/system/node_modules/threebar/threebar.js 
  colors {
    focused_workspace #164D1D #00CF1C #164D1D
  }
}

# Font color
client.focused #164D1D #000000 #179128 #ffffff

# Mouse control
mode "mouse control" {
  bindsym w exec xdotool mousemove_relative -- 0 -10 
  bindsym a exec xdotool mousemove_relative -- -10 0 
  bindsym s exec xdotool mousemove_relative -- 0 10 
  bindsym d exec xdotool mousemove_relative -- 10 0 

  bindsym Shift+w exec xdotool mousemove_relative -- 0 -50 
  bindsym Shift+a exec xdotool mousemove_relative -- -50 0 
  bindsym Shift+s exec xdotool mousemove_relative -- 0 50 
  bindsym Shift+d exec xdotool mousemove_relative -- 50 0 

  bindsym o exec xdotool click 1
  bindsym p exec xdotool click 3 
  bindsym k exec xdotool click 4 
  bindsym m exec xdotool click 5 

  bindsym Escape mode "default" 
}

bindsym $mod+Shift+m mode "mouse control"

# Exec command dialog (like Win+R on windows)
bindsym $mod+c exec i3-input -F 'exec %s' -P 'Command: '

# System functions
set $sysmode "(S)hutdown L(o)gout (R)eboot (L)ock"
mode $sysmode {
  bindsym s exec --no-startup-id $RUN system.shutdown, mode "default"
  bindsym o exec --no-startup-id $RUN system.logout, mode "default"
  bindsym r exec --no-startup-id $RUN system.reboot, mode "default"
  bindsym l exec --no-startup-id $RUN system.lock, mode "default"

  bindsym Escape mode "default"
}
bindsym $mod+Escape mode $sysmode

# Volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.bfos/bin/bfupdatevolume 10%+
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.bfos/bin/bfupdatevolume 10%-

# Pomodoro mode
set $pomodoromode "Pomodoro: (B)tart (S)hort break (L)ong break"
mode $pomodoromode {
  bindsym b exec --no-startup-id $RUN "pomodoro.start", mode "default"
  bindsym s exec --no-startup-id $RUN "pomodoro.smallBreak", mode "default"
  bindsym l exec --no-startup-id $RUN "pomodoro.longBreak", mode "default"

  bindsym Escape mode "default"
}

bindsym $mod+Shift+p mode $pomodoromode

# Touchpad control
bindsym XF86TouchpadToggle exec --no-startup-id ~/.bfos/bin/bftouchpadtoggle toggle

#Printscreen
bindsym $mod+p exec ~/.bfos/bin/bfprintscreen

# Search
bindsym $mod+Shift+s exec ~/.bfos/bin/bfsearch

# Gif Recordering mode
set $recordingmode "Recording, press ESC to stop"
mode $recordingmode {
  bindsym Escape exec ~/gifrecorder/gifrecorder stop, mode "default"
}

# Gif Recorder mode
set $recordmode "Record mode, press r to start"
mode $recordmode {
  bindsym r exec ~/gifrecorder/gifrecorder record &, mode $recordingmode

  bindsym Escape mode "default"
}
bindsym $mod+g mode $recordmode

# Basic Vim Keybinds
bindsym --release $mod+Control+h exec xdotool key --clearmodifiers Left
bindsym --release $mod+Control+j exec xdotool key --clearmodifiers Down
bindsym --release $mod+Control+k exec xdotool key --clearmodifiers Up
bindsym --release $mod+Control+l exec xdotool key --clearmodifiers Right

bindsym --release $mod+Control+e exec xdotool key --clearmodifiers control+Right
bindsym --release $mod+Control+b exec xdotool key --clearmodifiers control+Left

bindsym --release $mod+Control+x exec xdotool key --clearmodifiers Delete
bindsym --release $mod+Control+Shift+d exec xdotool key --clearmodifiers control+Shift+End+Delete
# End Basic Vim Keybinds

bindsym --release $mod+Shift+v exec ~/.vim-anywhere/bin/run

exec i3 --force-xinerama -V >>~/.i3/i3log 2>&1
